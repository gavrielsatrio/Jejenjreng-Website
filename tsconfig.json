{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/icons/*": ["./src/icons/*"],
      "@/interfaces/*": ["./src/interfaces/*"],
      "@/types/*": ["./src/types/*"],
      "@/enums/*": ["./src/enums/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/states/*": ["./src/states/*"],
      "@/configs/*": ["./src/configs/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/mails/*": ["./src/mails/*"],
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
